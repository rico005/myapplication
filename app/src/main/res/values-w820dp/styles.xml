	<style name="NotificationTitle">
		<item name="android:textAppearance">@android:style/TextAppearance.StatusBar.EventContent.Title</item>
	</style>

	<style name="btn_custom_style">
		<item name="android:layout_width">48dip</item>
		<item name="android:layout_height">48dip</item>
		<item name="android:layout_gravity">center|right</item>
		<item name="android:background">?android:listChoiceBackgroundIndicator</item>
	</style>

	<style name="CustomNotificationTitle">
		<item name="android:textAppearance">@android:style/TextAppearance.StatusBar.EventContent.Title</item>
		<item name="android:textSize">16dp</item>
		<item name="android:textStyle">normal</item>
	</style>

	<style name="CustomNotificationText">
		<item name="android:textAppearance">@android:style/TextAppearance.StatusBar.EventContent</item>
	</style>

